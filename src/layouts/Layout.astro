---
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html id="modeHtml" lang="es" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body id="bodyBg">
		<div class="absolute top-0 z-[-2] h-screen w-screen bg-slate-100 dark:bg-neutral-950 dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]">

		<Header/>
		<slot />
		
		</div>
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
		
	}
	html {
		font-family: system-ui, sans-serif;
	}
